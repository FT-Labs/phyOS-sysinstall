#!/bin/bash
chmod 750 /etc/sudoers.d
chmod 750 /etc/polkit-1/rules.d
chgrp polkitd /etc/polkit-1/rules.d
rm -rf /etc/systemd/system/getty@tty1.service.d
sed -i "s/#AutoEnable=false/AutoEnable=true/g" /etc/bluetooth/main.conf
echo 'load-module module-switch-on-connect' | sudo tee --append /etc/pulse/default.pa
rm -f /etc/sudoers.d/g_wheel
rm -f /etc/polkit-1/rules.d/49-nopasswd_global.rules
rm -f /etc/sddm.conf.d/autologin.conf
rm /root/{.automated_script.sh,.zlogin}
mv /etc/phyOS-release /etc/lsb-release
chmod -v 750 /root
cp -f /usr/local/share/phyOS/mkinitcpio.d/linux.ply-encrypt-lvm.preset /etc/mkinitcpio.conf
mkinitcpio -P
exit 0
